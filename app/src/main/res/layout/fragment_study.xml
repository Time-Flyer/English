<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/item_study_header"
        android:id="@+id/tmp_study_top" />

    <include layout="@layout/item_study_btn_group"
        android:id="@+id/tmp_study_btn_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_border_7"
        android:layout_marginEnd="@dimen/margin_border_7"
        app:layout_constraintTop_toBottomOf="@+id/tmp_study_top"/>

    <!-- TODO RecyclerView 挡住了按钮，又是 layout_height="wrap_content" 作祟！！！-->
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/rv_study"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_border_7"
        app:layout_constraintTop_toBottomOf="@id/tmp_study_btn_group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>