<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_border_7">

    <TextView
        android:id="@+id/tv_study_rv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="11月21日 星期六"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_study_rv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_border_7"
        android:layout_marginEnd="@dimen/margin_border_7"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_study_rv_day"
        app:cardCornerRadius="@dimen/card_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_study_rv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_border_15"
                android:layout_marginStart="@dimen/margin_border_15"
                android:text="二年级对话练习[What's your name?]"
                android:textSize="18sp"
                android:textColor="@color/black_222"/>

            <TextView
                android:id="@+id/tv_study_rv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_border_15"
                android:background="@drawable/shape_tv_round"
                android:text="跟读"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_border_15"
                android:layout_marginBottom="@dimen/margin_border_15"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_study_rv_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/default_student_avatar"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_border_7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_study_rv_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全国小学二年级"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_study_rv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今天18:30开始"
                        android:textColor="#757575"
                        android:textSize="13sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>