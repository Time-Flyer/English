<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_border_8"
    android:layout_marginBottom="@dimen/margin_border_8"
    android:background="@drawable/shape_card_view_shadow" >

    <TextView
        android:id="@+id/tv_profile_rv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_border_16"
        android:textColor="@color/black_222"
        android:textSize="@dimen/profile_rv_title_size"
        android:text="我的学习成绩"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tmp_profile_line1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_profile_rv_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_border_16"
        android:textColor="@color/black_222"
        android:textSize="@dimen/study_rv_content_size_little"
        android:text="全国小学五年级"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tmp_profile_line1"/>

    <View
        android:id="@+id/tmp_profile_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="36dp"
        android:layout_marginStart="@dimen/margin_border_16"
        android:layout_marginEnd="@dimen/margin_border_16"
        android:background="#E7E7F1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tmp_profile_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_border_48"
        android:text="折线图"
        app:layout_constraintTop_toBottomOf="@id/tmp_profile_line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/tmp_profile_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_border_48"
        android:layout_marginBottom="@dimen/margin_border_32"
        android:layout_marginStart="@dimen/margin_border_8"
        android:layout_marginEnd="@dimen/margin_border_8"
        android:background="#D3D0E2"
        app:layout_constraintTop_toBottomOf="@id/tmp_profile_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_profile_rv_all_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_border_16"
        android:layout_marginBottom="@dimen/margin_border_16"
        android:textColor="@color/black_222"
        android:textSize="@dimen/study_rv_content_size"
        android:text="全部详情"
        app:layout_constraintTop_toBottomOf="@id/tmp_profile_line2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>