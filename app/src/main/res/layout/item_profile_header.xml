<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_bg_color_purple">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_profile_student_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="@dimen/margin_border_15"
        android:src="@drawable/default_student_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_profile_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/margin_border_7"
        android:text="xxx同学"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/civ_profile_student_avatar"/>

    <TextView
        android:id="@+id/tv_profile_flower_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_border_7"
        android:layout_marginBottom="@dimen/margin_border_15"
        android:drawablePadding="5dp"
        android:textColor="@color/white"
        android:text="0"
        app:drawableLeftCompat="@drawable/ic_flower_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_student_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/civ_profile_student_avatar" />

    <TextView
        android:id="@+id/tv_profile_like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:layout_marginStart="@dimen/margin_border_15"
        android:layout_marginBottom="@dimen/margin_border_15"
        android:textColor="@color/white"
        android:text="0"
        app:drawableStartCompat="@drawable/ic_like_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_student_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_profile_flower_num" />

</androidx.constraintlayout.widget.ConstraintLayout>