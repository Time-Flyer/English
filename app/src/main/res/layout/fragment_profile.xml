<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FC" >

    <include layout="@layout/item_profile_header"
        android:id="@+id/tmp_profile_top"/>

    <FrameLayout
        android:id="@+id/tmp_profile_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tmp_profile_top">

        <include layout="@layout/item_profile_statistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_border_15" />

    </FrameLayout>

    <com.youth.banner.Banner
        android:id="@+id/banner_profile_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_border_7"
        app:banner_indicator_selected_color="@color/indicator_active"
        app:banner_indicator_normal_color="@color/indicator_inactive"
        app:layout_constraintTop_toBottomOf="@id/tmp_profile_statistics" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_border_15"
        android:background="@drawable/shape_card_view"
        android:drawablePadding="5dp"
        android:paddingTop="@dimen/margin_border_7"
        android:paddingBottom="@dimen/margin_border_7"
        android:paddingStart="@dimen/margin_border_15"
        android:gravity="center_vertical"
        android:text="设置"
        android:textSize="15sp"
        android:textColor="@color/black_222"
        app:drawableStartCompat="@drawable/ic_setting"
        app:layout_constraintTop_toBottomOf="@id/banner_profile_details"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>